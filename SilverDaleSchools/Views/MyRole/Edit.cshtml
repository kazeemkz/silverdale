@model SilverDaleSchools.Model.MyRole

@{
    ViewBag.Title = "Edit";
   // Layout = "~/Views/Shared/_Layout.mobile.cshtml";
}

<h4>EDIT ROLE ACTIVITIES FOR @Model.RoleName</h4>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
      <fieldset>
        <legend>Edit Activites for Role - <b>@Model.RoleName </b> </legend>

        @Html.HiddenFor(model => model.MyRoleID)

       @* <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>*@
        <div class="editor-field">
            @Html.HiddenFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>

   
        <fieldset>
        <legend>Edit Activites for  Students</legend>
         <table style="width: 100%">
                <tr>
                    @{
                        int cnt = 0;
                        List<SilverDaleSchools.Models.ActivityData> StudentA = ViewBag.Student;

                        foreach (var student in StudentA)
                        {
                            if (cnt++ % 2 == 0) {
                                @:  </tr> <tr> 
                            }
                            
                            if (student.Name.Equals("Create Student"))
                            {
                                 @: <td> 
                                <input type="checkbox" 
                                       name="selectedCourses" 
                                       value="@student.Name" + "Subject"
                                       @(Html.Raw(student.Assigned ? "checked=\"checked\"" : "")) /> 
                               <text>Upload Students' Record</text>
                            @:</td>
                            
                    }
                    else
                            { 
                            
                            
                            @: <td> 
                                <input type="checkbox" 
                                       name="selectedCourses" 
                                       value="@student.Name"+ "Subject" 
                                       @(Html.Raw(student.Assigned ? "checked=\"checked\"" : "")) /> 
                                @student.Name @:&nbsp;@* @student.Name*@
                            @:</td>
                    }
                        }
                        @: </tr>
                    }
            </table>

            </fieldset>


    



           
         <fieldset>
            <legend>Edit Activites for Staff</legend>
         <table style="width: 100%">
                <tr>
                    @{
                        int cnexam = 0;
                        List<SilverDaleSchools.Models.ActivityData> staff = ViewBag.Staff ;

                        foreach (var course in staff) {
                            if (cnexam++ % 2 == 0)
                            {
                                @:  </tr> <tr> 
                            }
                            @: <td> 
