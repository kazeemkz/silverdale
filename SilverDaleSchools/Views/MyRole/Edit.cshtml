                                       @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) /> 
                                @course.Name @:&nbsp; @*@course.Name*@
                            @:</td>
                        }
                        @: </tr>
                    }
            </table>
        </fieldset>
        
        
 
     
        
      
            
